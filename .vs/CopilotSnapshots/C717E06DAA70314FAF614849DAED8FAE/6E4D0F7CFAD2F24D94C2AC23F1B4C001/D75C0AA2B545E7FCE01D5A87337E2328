namespace SweetHotel.API.Enums
{
    /// <summary>
    /// Trạng thái đặt phòng
    /// </summary>
    public enum BookingStatus
    {
        /// <summary>
        /// Chờ xác nhận
        /// </summary>
        Pending = 0,
        
        /// <summary>
        /// Đã xác nhận
        /// </summary>
        Confirmed = 1,
        
        /// <summary>
        /// Đã hủy
        /// </summary>
        Cancelled = 2,
        
        /// <summary>
        /// Đang sử dụng (khách đã check-in)
        /// </summary>
        CheckedIn = 3,
        
        /// <summary>
        /// Đã hoàn thành (khách đã check-out)
        /// </summary>
        Completed = 4,
        
        /// <summary>
        /// Không đến (No-show)
        /// </summary>
        NoShow = 5
    }
}
