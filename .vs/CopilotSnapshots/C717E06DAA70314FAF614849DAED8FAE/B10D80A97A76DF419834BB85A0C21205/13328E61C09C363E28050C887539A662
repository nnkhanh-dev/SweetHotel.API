using AutoMapper;
using Microsoft.AspNetCore.Mvc;

namespace SweetHotel.API.Controllers
{
    [Route("api/[controller]")]
    [ApiController]
    public class HealthController : ControllerBase
    {
        private readonly IMapper _mapper;

        public HealthController(IMapper mapper)
        {
            _mapper = mapper;
        }

        // GET: api/Health
        [HttpGet]
        public IActionResult GetHealth()
        {
            return Ok(new 
            { 
                status = "Healthy",
                timestamp = DateTime.UtcNow,
                message = "SweetHotel API is running successfully!",
                autoMapperConfigured = _mapper != null
            });
        }

        // GET: api/Health/test-mapper
        [HttpGet("test-mapper")]
        public IActionResult TestMapper()
        {
            try
            {
                _mapper.ConfigurationProvider.AssertConfigurationIsValid();
                return Ok(new { message = "AutoMapper configuration is valid!" });
            }
            catch (Exception ex)
            {
                return BadRequest(new { message = "AutoMapper configuration error", error = ex.Message });
            }
        }
    }
}
